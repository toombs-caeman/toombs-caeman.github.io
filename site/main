*/
* { box-sizing: border-box; }
body { color: black; background-color: oldlace; }
p { line-height: 1.5; }
h1 { text-align: center; }
a { text-decoration: none; font-weight: bold; }
a:link { color: steelblue ; }
a:active { color: midnightblue; }
a:visited { color: dimgray; }
a:hover { color: darkslategray; }
header { display: flex; }
header, footer {
  text-align: left;
  font-size: small;
}
.page-content { margin: 0 20%; }
.icon {
    width: 2ch;
    height: 2ch;
}
.date { float: right; }
.title {
    text-align: center;
    flex: 2;
}
.footer {
    margin: 0 20%;
}

/* bold for the selected filter */
input[type="radio"]:checked + label { font-weight: bold; }
/* hide links that don't match the active filter */

input[name="link"]{ display:none; }
